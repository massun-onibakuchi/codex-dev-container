{
	"dockerComposeFile": "compose.yaml",
	"service": "devcontainer",
	"features": {
		"ghcr.io/devcontainers/features/python": {
			"version": "none",
			"toolsToInstall": "uv,pre-commit"
		},
		"ghcr.io/devcontainers/features/node": {}
	},
	"containerEnv": {
		"CODEX_HOME": "/home/vscode/.codex",
		"DISABLE_AUTOUPDATER": "1",
		"PROMPT_COMMAND": "history -a",
		"HISTFILE": "/commandhistory/.bash_history",
		"UV_LINK_MODE": "copy",
		"NOTIFICATION_TITLE": "${localWorkspaceFolderBasename}",
		"NOTIFICATION_ENDPOINT": "http://notification:8888/notify",
		"SSH_AUTH_SOCK": "/ssh-agent",
		"http_proxy": "http://proxy:3128",
		"https_proxy": "http://proxy:3128",
		"no_proxy": "localhost,127.0.0.1,proxy,notification"
	},
	"remoteEnv": {
		"npm_config_preifx": "/home/vscode/.local"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff",
				"redhat.vscode-yaml"
			],
			"settings": {
				"[python]": {
					"editor.defaultFormatter": "charliermarsh.ruff",
					"editor.formatOnSave": true
				},
				"python.defaultInterpreterPath": "/workspace/${localWorkspaceFolderBasename}/.venv/bin/python"
			}
		}
	},
	"remoteUser": "vscode",
	"postCreateCommand": ".devcontainer/install-codex.sh",
	"postStartCommand": "sudo .devcontainer/update-workspace-owner.sh",
	"waitFor": "postStartCommand",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"mounts": [
		"source=..,target=/workspaces/${localWorkspaceFolderBasename},type=bind",
		"source=codex-bashhistory,target=/commandhistory,type=volume",
		"source=codex-config,target=/home/vscode/.codex,type=volume",
		"source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
	]
}
